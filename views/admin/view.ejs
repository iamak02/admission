<%- include('../partition/header.ejs')%>
    <section class="display">
        <div class="container">
            <div class="col-md-12">
                <div class="display-box">
                    <h1 class="text-center pt-5 mb-5">View</h1>
                    <table class="table table-hover table-striped">
                        <thead>
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Name</th>
                                <th scope="col">Email</th>
                                <th scope="col">Phone</th>
                                <th scope="col">Course</th>
                                <th scope="col">Address</th>
                                <th scope="col">Image</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% var id=1 %>
                                <tr>
                                    <th scope="row">
                                        <%= id++ %>
                                    </th>
                                    <td>
                                        <%= data.name %>
                                    </td>
                                    <td>
                                        <%= data.email %>
                                    </td>
                                    <td>
                                        <%= data.phone %>
                                    </td>
                                    <td>
                                        <%= data.course %>
                                    </td>
                                    <td>
                                        <%= data.address %>
                                    </td>
                                    <td><img src="/upload/<%=data.image%>" alt="" class="w-50"></td>
                                </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
    <%- include('../partition/footer.ejs')%>
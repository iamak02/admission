<%- include('../partition/header.ejs')%>
    <section class="display">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="display-box">
                        <h1 class="text-center pt-5 mb-5">Display</h1>
                        <table class="table table-hover table-striped">
                            <thead>
                                <tr>
                                    <th scope="col">ID</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Phone</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% var id=1 %>
                                    <% data.forEach((item)=>{ %>
                                        <tr>
                                            <th scope="row">
                                                <%= id++ %>
                                            </th>
                                            <td>
                                                <%= item.name %>
                                            </td>
                                            <td>
                                                <%= item.email %>
                                            </td>
                                            <td>
                                                <%= item.phone %>
                                            </td>
                                            <td>
                                                <a href="/view/<%=item._id%>" class="btn btn-primary mb-1">View</a>
                                                &nbsp;
                                                <a href="/edit/<%=item._id%>" class="btn btn-primary mb-1">Edit</a>
                                            </td>
                                        </tr>
                                        <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <%- include('../partition/footer.ejs')%>